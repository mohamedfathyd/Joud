<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/logo"

            />
        <TextView
            android:id="@+id/cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/a"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:text="@string/name"
            android:textColor="#3E4958"
            android:textSize="15dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/backshapeemptyblue"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:weightSum="6"
            android:layout_marginTop="10dp"
            >
             <EditText
                    android:id="@+id/textInputEditTextname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:longClickable = "false"
                    android:inputType="text"
                    android:textSize="14dp"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textColor="#000000" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:weightSum="6"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:layout_weight="0.6"
                android:background="@drawable/phone"
                />
            <com.hbb20.CountryCodePicker
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.9"
                app:ccp_hintExampleNumber="true"
                app:ccp_countryPreference="SA"
                app:ccp_defaultNameCode="SA"
                android:layout_marginTop="20dp"
                app:ccp_showPhoneCode="false"
                android:id="@+id/ccp"
                app:ccp_hintExampleNumberType="FIXED_LINE"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutphone"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextphone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/phone"
                android:longClickable = "false"
                android:textSize="16dp"
                android:inputType="number"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/a"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:text="@string/address"
            android:textColor="#3E4958"
            android:textSize="15dp"
            android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/backshapeemptyblue"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:weightSum="6"
        >
        <EditText
                android:id="@+id/textInputEditTextemail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:textSize="14dp"
                android:inputType="text"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="#000000" />

    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/a"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:text="@string/passwordValied"
            android:textColor="#3E4958"
            android:textSize="15dp"
            android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/backshapeemptyblue"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:weightSum="6"
        >
         <EditText
                android:id="@+id/textInputEditTextpassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:inputType="textPassword"
                android:longClickable = "false"
                android:maxLines="1"
                android:textSize="14dp"
                android:padding="5dp"
                android:textColor="#000000" />

    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/a"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:text="@string/hint_confirm_password"
            android:textColor="#3E4958"
            android:textSize="15dp"
            android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/backshapeemptyblue"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:weightSum="6"
        >
       <EditText
                android:id="@+id/textInputEditTextConfirmpassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="14dp"
                android:padding="5dp"
                android:longClickable = "false"
                android:textColor="#000000" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shapewhite"
            android:layout_marginTop="20dp"
            android:visibility="gone"

            android:weightSum="6"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.6"
                android:background="@drawable/location"
                />
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginTop="15dp"
                android:layout_weight="5.4"
                android:orientation="vertical"
                >
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinCountry"
                    ></Spinner>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="@color/orange"
                    android:text="________________________________________________________________________"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shapewhite"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:weightSum="6"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.6"
                android:background="@drawable/location"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutLocation"
                android:layout_width="0dp"
                android:layout_weight="5.4"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputEditTextLocation"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/location"
                    android:inputType="text"
                    android:textSize="14dp"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:longClickable = "false"
                    android:textColor="#ffffff" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
            android:visibility="gone"
            android:orientation="horizontal"

            >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check"
            android:text="@string/accept"
            android:textColor="#ffffff"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:id="@+id/showterms"
            android:text="@string/terms"
            />
    </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButtonRegisterservcies"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/backshape2"
            android:text="@string/text_register" />


    </LinearLayout>
</RelativeLayout>

    </ScrollView>
</RelativeLayout>
</androidx.core.widget.NestedScrollView>
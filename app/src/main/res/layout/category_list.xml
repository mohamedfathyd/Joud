<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardPreventCornerOverlap="false"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#00000000"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativelayout2"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_marginRight="50dp"
          android:layout_marginLeft="50dp"
          android:orientation="vertical"
          android:padding="10dp"
          android:background="@drawable/backshape3"
          android:layout_height="wrap_content">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="5dp"
     android:orientation="horizontal"
     android:weightSum="5"
     >
     <TextView
         android:layout_width="0dp"
         android:layout_weight="3.5"
         android:layout_height="40dp"
         android:background="@drawable/backshape2"
         android:textColor="@color/white"
         android:textSize="12.5dp"
         android:textStyle="bold"
         android:text="الكارت الذهبي"
         android:id="@+id/name"
         android:fontFamily="@font/taj"
         android:layout_margin="5dp"
         android:gravity="center"
         android:layout_centerHorizontal="true"
         android:layout_below="@+id/image"
         />
     <TextView
         android:layout_width="0dp"
         android:layout_weight="0.4"
         android:layout_height="wrap_content" />
          <com.makeramen.roundedimageview.RoundedImageView
              android:id="@+id/image"
              android:layout_width="0dp"
              android:layout_weight="1.1"
              android:layout_gravity="center_vertical"
              android:layout_height="40dp"
              android:background="@drawable/card"
              />

 </LinearLayout>
          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginTop="5dp"
              android:background="#909090"
              ></View>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="10dp"
              android:weightSum="2"
              >
              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="@string/name"
                  android:textColor="@color/black"
                  android:fontFamily="@font/taj"
                  android:layout_height="wrap_content" />
              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:id="@+id/name_"
                  android:text="@string/name"
                  android:textColor="@color/black"
                  android:fontFamily="@font/taj"
                  android:layout_height="wrap_content" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="10dp"
              android:weightSum="2"
              >
              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="@string/numorders"
                  android:textColor="@color/black"
                  android:fontFamily="@font/taj"
                  android:layout_height="wrap_content" />
              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:id="@+id/numViews"
                  android:text="5"
                  android:textColor="@color/black"
                  android:fontFamily="@font/taj"
                  android:layout_height="wrap_content" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="2"
              android:layout_marginTop="10dp"
              >
              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="@string/expiry_date"
                  android:textColor="@color/black"
                  android:fontFamily="@font/taj"
                  android:layout_height="wrap_content" />
              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:id="@+id/date"
                  android:text="12/12/2021"
                  android:textColor="@color/black"
                  android:fontFamily="@font/taj"
                  android:layout_height="wrap_content" />
          </LinearLayout>
      </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
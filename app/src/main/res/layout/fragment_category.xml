<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        >
        <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:local="http://schemas.android.com/apk/res-auto"
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"


            local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            local:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="@string/main"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/notification"
                android:background="@drawable/notification"
                />

        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/shapea"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            android:layout_weight="3"
            android:id="@+id/recyclerview2"
            android:orientation="horizontal"
            android:layout_gravity="center"
            app:reverseLayout="true"
            android:padding="1dp"
            >

        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:background="@drawable/corneren"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:id="@+id/textco"
            android:text="@string/myCard"
            android:layout_marginTop="-20dp"
            android:gravity="center"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="19dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="البطاقة الذهبية"
            android:id="@+id/Cardname"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="5"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/carddetails"
                android:text="تالنتيلانيستلانيتسبلانيبستلانيبتلانيبتلانيبتالنتيبسالنتيباليبنملتايبناتلنيب"
                />
           <LinearLayout
               android:layout_width="match_parent"
               android:weightSum="10"
               android:layout_marginTop="20dp"
               android:orientation="horizontal"
               android:layout_height="50dp">
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="4"
                   android:layout_height="50dp"
                   android:background="@drawable/corneren"
                   android:layout_gravity="start"
                   android:textStyle="bold"
                   android:textSize="15dp"
                   android:textColor="@color/white"
                   android:text="@string/price"
                   android:layout_marginTop="20dp"
                   android:gravity="center"

                   />
               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="6"
                   android:layout_height="50dp"
                   android:background="@drawable/pricedd"
                   android:layout_gravity="start"
                   android:textStyle="bold"
                   android:textSize="15dp"
                   android:id="@+id/price"
                   android:textColor="#ffffff"
                   android:text="@string/price"
                   android:layout_marginTop="18dp"
                   android:gravity="center"

                   />
           </LinearLayout>

        <Button
            android:id="@+id/cunti"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/backkshape"
            android:text="Order Card"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:textStyle="bold"  />
        <Button
            android:id="@+id/cuntipay"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="false"
            android:background="@drawable/backgroundstyle"
            android:text="Order and Electronic Pay"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:textStyle="bold"  />
    </LinearLayout>
    </ScrollView>
    </RelativeLayout>
</FrameLayout>